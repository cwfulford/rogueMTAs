cmd=`basename $0`
ver=`echo "$Id: rogueMTAs,v 1.1 2019/12/09 12:45:00 fulford Exp fulford $"|awk '{print $3,$4,$5}'`
syntax="$cmd [-c <configfile>] [-d] [-h <hostid>] [-v]|-V"
hostid=tx-slkmail
max=2000
while [ $# -gt 0 ] ;do
	case $1 in 
		-d) set -x;debug=0;shift;;
		-h) hostid=$2;shift 2;;			
		-v) verbose=:;shift;;
		-V) echo "$cmd $Revision: 1.1 $ $Date: 2019/12/09 12:45:00 $"|awk '{print $1,$3,$6}';exit;;  
	esac
done

tmp=/tmp/$1.$$
sorted=/tmp/$1.sorted.$$
ssh $hostid cat /var/log/maillog|
 grep "did not issue" |sed -ne 's/^[^\[]*\[[0-9]*\][^\[]*\[\([0-9\.]*\)\].*/\1/p'>$tmp
cat $tmp|sort -u |
while read ip ;do
	c=`grep $ip  $tmp|wc -l`
	printf "%-15s %5i\n" $ip $c
done |sort -nk 2 

	
rm $tmp
